<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory name="EnsinoDistanciaFac">
		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name="hibernate.connection.password">ead</property>
		<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
		<property name="hibernate.connection.url">jdbc:postgresql://192.168.1.101:5432/ead</property>
		<property name="hibernate.connection.username">ead</property>
		<property name="hibernate.connection.autocommit">false</property>

		<mapping class="br.com.usjt.ead.aluno.AlunoBean" />

		<mapping class="br.com.usjt.ead.contato.ContatoBean" />
		<mapping class="br.com.usjt.ead.contato.TelefoneBean" />
		<mapping class="br.com.usjt.ead.contato.EnderecoBean" />
		<mapping class="br.com.usjt.ead.contato.TipoTelefoneBean" />

		<mapping class="br.com.usjt.ead.curso.AvaliacaoBean" />
		<mapping class="br.com.usjt.ead.curso.DisciplinaBean" />
		<mapping class="br.com.usjt.ead.curso.ModuloBean" />

		<mapping class="br.com.usjt.ead.professor.ProfessorBean" />
		
		<mapping class="br.com.usjt.ead.material.MaterialDidaticoBean" />
		
		<mapping class="br.com.usjt.ead.cidadestado.CidadeBean" />
		<mapping class="br.com.usjt.ead.cidadestado.EstadoUFBean" />
		
		<mapping class="br.com.usjt.ead.PropertiesBean" />

	</session-factory>
</hibernate-configuration>
